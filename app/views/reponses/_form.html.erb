<%= form_for(@reponse) do |f| %>
  <% if @reponse.errors.any? %>
    <div id="error_explanation">
      <h2>Impossible de sauvegarder :</h2>

      <ul>
      <% @reponse.errors.each do |attr, msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<% if @question %>

  <div class="field">
    Question : <%= @question.title%>
  </div>
  <div class="field">
    <%= f.hidden_field(:question_id, :value => @question.id) %>
  </div>

<% else %>

  <div class="field">
  <%= f.label :question_id, "Questions :" %><br />
  <%= f.collection_select(:question_id, Question.all, :id, :title) %>
  </div>

<% end %>


  <div class="field">
    <%= f.label :title, "Reponse :" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :correct, "Correcte ?" %><br />
    <%= f.check_box :correct %>
  </div>
  <div class="actions">
    <%= f.submit "Valider" %>
  </div>
<% end %>
