<!DOCTYPE html>
<html>
<head>
  <title>ProjetRails</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
   <div id="principal">
   
		<div id="entete">
		</div>

		<div id="menu">
			<div class="menutitre"><%= link_to "Accueil", root_path, :class => "lienmenu" %> </div>
			<div class="menutitre"><%= link_to "Top 10 Utilisateurs", users_path, :class => "lienmenu" %> </div>
			<div class="menutitre"><%= link_to "Top 10 Catégories", categories_path, :class => "lienmenu" %> </div>
			<div class="menutitre"><%= link_to_if(!session[:user], "S'inscrire", new_user_path, :class => "lienmenu") do link_to "Voir profil", user_path(session[:user]), :class => "lienmenu" end %></div>
			<div class="menutitre"><%=signin_link%></div>			
		</div>

		<div id="contenu">
			<div id="haut">
				<br><%= global_title %>
				<div id="trait"></div>
			</div>
			<div id="milieu">
				<% flash.each do | key, value | %>
					<div id="<%= key %>"><%=value %></div>
				<% end %>
				
				<div id="texte"><%= yield %></div>
			</div>
			<div id="bas"></div>
		</div>

		<div id="pied">
		Réalisé par Julie Bocquelet, Loik Hameaux et David Sauvage
		</div>
   </div>
</body>
</html>



