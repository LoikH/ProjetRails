<span class="marge"><b>Popularite :</b> <%= @questionnaire.popularity %> </span>
<span class="marge"><b>Difficulté :</b> <%= @questionnaire.difficulty %> </span>
<span class="marge"><b>Coût :</b> <%= @questionnaire.cost %> </span>
<span class="marge"><b>Questions :</b> <%= @questionnaire.questions.count %> </span>
<span class="marge"><b>Points à gagner :</b> <%= 0 %> </span>

<br/> <br/>

<% if @questionnaire.questions.count !=0 %>
<table>
  <tr>
    <th>Question</th>
    <th>Nombre de points</th>
    <% if session_admin? %> <th></th> <% end %>
  </tr>

<% @questionnaire.questions.each do |question| %>
  <tr>
    <td><%= link_to question.title, question %></td>
    <td><%= question.points %></td>
     <% if session_admin? %> <td><%= link_to 'Supprimer', question, :confirm => 'Etes vous sur ?', :method => :delete %></td> <% end %>
  </tr>
<% end %>
</table>

<br />

<% else %>
	Aucune question.
<% end %>

<br/> <br/>

<% if session_admin? %>
<%= link_to 'Ajouter une question', :controller => "questions", :action => "new", :quizz => @questionnaire %> |
<%= link_to 'Editer', edit_questionnaire_path(@questionnaire) %> |
<%= link_to 'Supprimer', @questionnaire, :confirm => 'Etes-vous sûr?', :method => :delete%>
<% end %>

