<%= form_for(@question) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2>Impossible de sauvegarder :</h2>

      <ul>
      <% @question.errors.each do |attr, msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if @questionnaire %>

  <div class="field">
    Questionnaire : <%= @questionnaire.title%>
  </div>
  <div class="field">
    <%= f.hidden_field(:questionnaire_id, :value => @questionnaire.id) %>
  </div>

<% else %>

  <div class="field">
  <%= f.label :questionnaire_id, "Questionnaires :" %><br />
  <%= f.collection_select(:questionnaire_id, Questionnaire.all, :id, :title) %>
  </div>

<% end %>


  <div class="field">
    <%= f.label :title, "Question :" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :points, "Nombre de points :" %><br />
    <%= f.text_field :points %>
  </div>

  <div class="actions">
    <%= f.submit "Valider" %>
  </div>
<% end %>
